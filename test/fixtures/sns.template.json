{
  "Metadata": {},
  "Parameters": {
    "token": {
      "Type": "String",
      "Description": "token"
    },
    "CodeS3Bucket": {
      "Type": "String",
      "Description": "lambda function S3 bucket location"
    },
    "CodeS3Prefix": {
      "Type": "String",
      "Description": "lambda function S3 prefix location"
    },
    "GitSha": {
      "Type": "String",
      "Description": "Deploy Gitsha"
    },
    "ServiceAlarmEmail": {
      "Type": "String",
      "Description": "Service alarm notifications will send to this email address"
    },
    "DispatchSnsArn": {
      "Type": "String",
      "Description": "Dispatch SNS ARN (Optional)"
    }
  },
  "Mappings": {},
  "Conditions": {
    "HasDispatchSnsArn": {
      "Fn::Not": [
        {
          "Fn::Equals": [
            "",
            {
              "Ref": "DispatchSnsArn"
            }
          ]
        }
      ]
    }
  },
  "Resources": {
    "LambdaCfnRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            },
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Service": "events.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "basic",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:*"
                  ],
                  "Resource": {
                    "Fn::Join": [
                      "",
                      [
                        "arn:aws:logs:*:",
                        {
                          "Ref": "AWS::AccountId"
                        },
                        ":*"
                      ]
                    ]
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": {
                    "Ref": "ServiceAlarmSNSTopic"
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "iam:SimulateCustomPolicy"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "snsAlarmErrors": {
      "Type": "AWS::CloudWatch::Alarm",
      "Properties": {
        "EvaluationPeriods": "5",
        "Statistic": "Sum",
        "Threshold": "0",
        "AlarmDescription": "https://github.com/mapbox/lambda-cfn/blob/master/alarms.md#Errors",
        "Period": "60",
        "AlarmActions": [
          {
            "Ref": "ServiceAlarmSNSTopic"
          }
        ],
        "Namespace": "AWS/Lambda",
        "Dimensions": [
          {
            "Name": "FunctionName",
            "Value": {
              "Ref": "sns"
            }
          }
        ],
        "ComparisonOperator": "GreaterThanThreshold",
        "MetricName": "Errors"
      }
    },
    "snsAlarmNoInvocations": {
      "Type": "AWS::CloudWatch::Alarm",
      "Properties": {
        "EvaluationPeriods": "5",
        "Statistic": "Sum",
        "Threshold": "0",
        "AlarmDescription": "https://github.com/mapbox/lambda-cfn/blob/master/alarms.md#NoInvocations",
        "Period": "60",
        "AlarmActions": [
          {
            "Ref": "ServiceAlarmSNSTopic"
          }
        ],
        "Namespace": "AWS/Lambda",
        "Dimensions": [
          {
            "Name": "FunctionName",
            "Value": {
              "Ref": "sns"
            }
          }
        ],
        "ComparisonOperator": "LessThanThreshold",
        "MetricName": "Invocations"
      }
    },
    "ServiceAlarmSNSTopic": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "TopicName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "AWS::StackName"
              },
              "ServiceAlarm"
            ]
          ]
        },
        "Subscription": [
          {
            "Endpoint": {
              "Ref": "ServiceAlarmEmail"
            },
            "Protocol": "email"
          }
        ]
      }
    },
    "sns": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "CodeS3Bucket"
          },
          "S3Key": {
            "Fn::Join": [
              "",
              [
                {
                  "Ref": "CodeS3Prefix"
                },
                {
                  "Ref": "GitSha"
                },
                ".zip"
              ]
            ]
          }
        },
        "Role": {
          "Fn::If": [
            "HasDispatchSnsArn",
            {
              "Fn::GetAtt": [
                "LambdaCfnDispatchRole",
                "Arn"
              ]
            },
            {
              "Fn::GetAtt": [
                "LambdaCfnRole",
                "Arn"
              ]
            }
          ]
        },
        "Description": {
          "Ref": "AWS::StackName"
        },
        "Environment": {
          "Variables": {
            "ServiceAlarmSNSTopic": {
              "Ref": "ServiceAlarmSNSTopic"
            },
            "StackName": {
              "Ref": "AWS::StackName"
            },
            "Region": {
              "Ref": "AWS::Region"
            },
            "AccountId": {
              "Ref": "AWS::AccountId"
            },
            "StackId": {
              "Ref": "AWS::StackId"
            },
            "token": {
              "Ref": "token"
            },
            "CodeS3Bucket": {
              "Ref": "CodeS3Bucket"
            },
            "CodeS3Prefix": {
              "Ref": "CodeS3Prefix"
            },
            "GitSha": {
              "Ref": "GitSha"
            },
            "ServiceAlarmEmail": {
              "Ref": "ServiceAlarmEmail"
            },
            "DispatchSnsArn": {
              "Ref": "DispatchSnsArn"
            }
          }
        },
        "Handler": "test/function.fn",
        "Timeout": 60,
        "MemorySize": 128,
        "Runtime": "nodejs10.x"
      }
    },
    "snsSNSPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Fn::GetAtt": [
            "sns",
            "Arn"
          ]
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "sns.amazonaws.com",
        "SourceArn": {
          "Ref": "snsSNSTopic"
        }
      }
    },
    "snsSNSUser": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "Policies": [
          {
            "PolicyName": "snsSNSTopicPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Resource": {
                    "Ref": "snsSNSTopic"
                  },
                  "Action": [
                    "sns:ListTopics",
                    "sns:Publish"
                  ],
                  "Effect": "Allow"
                },
                {
                  "Resource": {
                    "Fn::Join": [
                      "",
                      [
                        "arn:aws:sns:",
                        {
                          "Ref": "AWS::Region"
                        },
                        ":",
                        {
                          "Ref": "AWS::AccountId"
                        },
                        ":*"
                      ]
                    ]
                  },
                  "Action": [
                    "sns:ListTopics"
                  ],
                  "Effect": "Allow"
                }
              ]
            }
          }
        ]
      }
    },
    "snsSNSTopic": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "DisplayName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "AWS::StackName"
              },
              "sns"
            ]
          ]
        },
        "TopicName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "AWS::StackName"
              },
              "sns"
            ]
          ]
        },
        "Subscription": [
          {
            "Endpoint": {
              "Fn::GetAtt": [
                "sns",
                "Arn"
              ]
            },
            "Protocol": "lambda"
          }
        ]
      }
    },
    "snsSNSUserAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "snsSNSUser"
        }
      }
    },
    "LambdaCfnDispatchRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            },
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Service": "events.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "basic",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:*"
                  ],
                  "Resource": {
                    "Fn::Join": [
                      "",
                      [
                        "arn:aws:logs:*:",
                        {
                          "Ref": "AWS::AccountId"
                        },
                        ":*"
                      ]
                    ]
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": {
                    "Ref": "ServiceAlarmSNSTopic"
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "iam:SimulateCustomPolicy"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": {
                    "Ref": "DispatchSnsArn"
                  }
                }
              ]
            }
          }
        ]
      },
      "Condition": "HasDispatchSnsArn"
    }
  },
  "Outputs": {
    "snsSNSTopic": {
      "Value": {
        "Ref": "snsSNSTopic"
      }
    },
    "snsSNSUserAccessKey": {
      "Value": {
        "Ref": "snsSNSUserAccessKey"
      }
    },
    "snsSNSUserSecretAccessKey": {
      "Value": {
        "Fn::GetAtt": [
          "snsSNSUserAccessKey",
          "SecretAccessKey"
        ]
      }
    }
  },
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "sns lambda-cfn function"
}
